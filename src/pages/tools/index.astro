---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const tools = await getCollection('tools');
---

<Layout title="Tools - Digital Garden">
	<section>
		<h1 class="text-3xl font-bold mb-8">Tools & Experiments</h1>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			{
				tools.map((tool) => (
					<a href={tool.data.url} target="_blank" rel="noopener noreferrer" class="group block p-6 border border-zinc-200 dark:border-zinc-800 rounded-lg hover:border-indigo-500 dark:hover:border-indigo-500 transition-colors bg-white dark:bg-zinc-900/50">
						<article class="space-y-3">
                            <div class="flex justify-between items-start">
							    <h2 class="text-xl font-semibold group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
								    {tool.data.title}
                                    <span class="inline-block ml-1 opacity-0 group-hover:opacity-100 transition-opacity text-zinc-400">â†—</span>
							    </h2>
                                {tool.data.version && <span class="text-xs font-mono bg-zinc-100 dark:bg-zinc-800 px-2 py-1 rounded">{tool.data.version}</span>}
                            </div>
							<p class="text-zinc-600 dark:text-zinc-400">
								{tool.data.description}
							</p>
						</article>
					</a>
				))
			}
		</div>
	</section>
</Layout>
