---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog - Digital Garden">
	<section>
		<h1 class="text-3xl font-bold mb-8">Blog</h1>
		<ul class="space-y-8">
			{
				posts.map((post) => (
					<li>
						<a href={`/blog/${post.id}`} class="group block">
							<article class="space-y-2">
                                <div class="flex items-center gap-2 text-sm text-zinc-500 dark:text-zinc-400">
                                    <time datetime={post.data.pubDate.toISOString()}>
                                        {post.data.pubDate.toLocaleDateString('en-us', {
                                            year: 'numeric',
                                            month: 'short',
                                            day: 'numeric',
                                        })}
                                    </time>
                                </div>
								<h2 class="text-2xl font-semibold group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
									{post.data.title}
								</h2>
								<p class="text-zinc-600 dark:text-zinc-400 line-clamp-2">
									{post.data.description}
								</p>
							</article>
						</a>
					</li>
				))
			}
		</ul>
	</section>
</Layout>
